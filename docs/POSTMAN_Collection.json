{
  "info": {
    "name": "Evently API",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "item": [
    {
      "name": "Health",
      "request": {
        "method": "GET",
        "url": {
          "raw": "{{baseUrl}}/health",
          "host": ["{{baseUrl}}"],
          "path": ["health"]
        }
      }
    },
    {
      "name": "List Events",
      "request": {
        "method": "GET",
        "url": {
          "raw": "{{baseUrl}}/api/events",
          "host": ["{{baseUrl}}"],
          "path": ["api", "events"]
        }
      }
    },
    {
      "name": "Create Event",
      "request": {
        "method": "POST",
        "header": [
          { "key": "Content-Type", "value": "application/json" }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"title\": \"Tech Conference\",\n  \"description\": \"Talks and workshops\",\n  \"startAt\": \"2025-01-20T09:00:00.000Z\",\n  \"endAt\": \"2025-01-20T12:00:00.000Z\",\n  \"capacity\": 150,\n  \"status\": \"PUBLISHED\",\n  \"organizerId\": \"<organizer-id>\",\n  \"venueId\": \"<venue-id>\"\n}"
        },
        "url": {
          "raw": "{{baseUrl}}/api/events",
          "host": ["{{baseUrl}}"],
          "path": ["api", "events"]
        }
      }
    },
    {
      "name": "Register User",
      "request": {
        "method": "POST",
        "header": [
          { "key": "Content-Type", "value": "application/json" }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"userId\": \"<user-id>\"\n}"
        },
        "url": {
          "raw": "{{baseUrl}}/api/events/{{eventId}}/register",
          "host": ["{{baseUrl}}"],
          "path": ["api", "events", "{{eventId}}", "register"]
        }
      }
    },
    {
      "name": "Issue Ticket",
      "request": {
        "method": "POST",
        "header": [
          { "key": "Content-Type", "value": "application/json" }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"price\": 49.9\n}"
        },
        "url": {
          "raw": "{{baseUrl}}/api/registrations/{{registrationId}}/tickets",
          "host": ["{{baseUrl}}"],
          "path": ["api", "registrations", "{{registrationId}}", "tickets"]
        }
      }
    },
    {
      "name": "Feed",
      "request": {
        "method": "GET",
        "url": {
          "raw": "{{baseUrl}}/api/events/{{eventId}}/feed",
          "host": ["{{baseUrl}}"],
          "path": ["api", "events", "{{eventId}}", "feed"]
        }
      }
    },
    {
      "name": "Post Feed Entry",
      "request": {
        "method": "POST",
        "header": [
          { "key": "Content-Type", "value": "application/json" }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"type\": \"COMMENT\",\n  \"payload\": {\n    \"author\": \"Alice\",\n    \"message\": \"Hâte d\u2019y être !\"\n  }\n}"
        },
        "url": {
          "raw": "{{baseUrl}}/api/events/{{eventId}}/feed",
          "host": ["{{baseUrl}}"],
          "path": ["api", "events", "{{eventId}}", "feed"]
        }
      }
    },
    {
      "name": "Analytics",
      "request": {
        "method": "GET",
        "url": {
          "raw": "{{baseUrl}}/api/events/{{eventId}}/analytics",
          "host": ["{{baseUrl}}"],
          "path": ["api", "events", "{{eventId}}", "analytics"]
        }
      }
    }
  ],
  "variable": [
    {
      "key": "baseUrl",
      "value": "http://localhost:3001"
    },
    {
      "key": "eventId",
      "value": "<event-id>"
    },
    {
      "key": "registrationId",
      "value": "<registration-id>"
    }
  ]
}
